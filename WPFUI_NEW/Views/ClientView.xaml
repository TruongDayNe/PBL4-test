<UserControl x:Class="WPFUI_NEW.Views.ClientView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:WPFUI_NEW.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280"
             d:DataContext="{d:DesignInstance vm:ClientViewModel, IsDesignTimeCreatable=True}">

    <!-- Input Binding để bắt sự kiện phím tắt ngay cả khi không focus vào nút -->
    <UserControl.InputBindings>
        <KeyBinding Key="M" Modifiers="Control" Command="{Binding ToggleMenuCommand}"/>
    </UserControl.InputBindings>

    <UserControl.Resources>
        <!-- Style cho các nút tròn trên thanh điều khiển -->
        <Style x:Key="BarButton" TargetType="Button">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#33FFFFFF"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#55FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style đặc biệt cho nút Ngắt kết nối (Màu đỏ) -->
        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource BarButton}">
            <Setter Property="Foreground" Value="#FF453A"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#33FF453A"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Converter để ẩn hiện UI -->
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <!-- Converter hiển thị icon Mic -->
        <Style x:Key="MicOnIcon" TargetType="TextBlock">
            <Setter Property="Visibility" Value="Visible"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsMicMuted}" Value="True">
                    <Setter Property="Visibility" Value="Collapsed"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="MicOffIcon" TargetType="TextBlock">
            <Setter Property="Visibility" Value="Collapsed"/>
            <Setter Property="Foreground" Value="#FF453A"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsMicMuted}" Value="True">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho KeyHint (ẩn nếu rỗng) -->
        <Style x:Key="KeyHintBorder" TargetType="Border">
            <Setter Property="Visibility" Value="Visible"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding ToastKeyHint}" Value="">
                    <Setter Property="Visibility" Value="Collapsed"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

    </UserControl.Resources>

    <!-- Nền đen bao trùm (Full Screen Game Style) -->
    <Grid Background="Black">

        <!-- LAYER 1: Màn hình Stream -->
        <!-- Nếu chưa có ảnh, hiện Placeholder -->
        <Image Source="{Binding ReceivedImage}" 
               Stretch="Uniform"
               VerticalAlignment="Center" 
               HorizontalAlignment="Center"
               RenderOptions.BitmapScalingMode="HighQuality"/>

        <!-- Text chờ kết nối -->
        <TextBlock Text="Đang chờ tín hiệu hình ảnh..." 
                   Foreground="#555" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center"
                   FontSize="16">
            <TextBlock.Style>
                <Style TargetType="TextBlock">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ReceivedImage}" Value="{x:Null}">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>

        <!-- LAYER 2: Overlay Thông số (Góc phải trên) -->
        <Border HorizontalAlignment="Right" VerticalAlignment="Top" 
                Margin="0,80,20,0"
                Background="#80000000" CornerRadius="8" Padding="15"
                Visibility="{Binding IsStatsVisible, Converter={StaticResource BoolToVis}}"
                IsHitTestVisible="False">
            <StackPanel>
                <TextBlock Foreground="#4CAF50" FontWeight="Bold" FontSize="14">
                    <Run Text="Ping: "/> <Run Text="{Binding PingText}"/>
                </TextBlock>
                <TextBlock Foreground="#2196F3" FontWeight="Bold" FontSize="14" Margin="0,5,0,0">
                    <Run Text="Bitrate: "/> <Run Text="{Binding BitrateText}"/>
                </TextBlock>
                <TextBlock Foreground="#F44336" FontWeight="Bold" FontSize="14" Margin="0,5,0,0">
                    <Run Text="Loss: "/> <Run Text="{Binding LossText}"/>
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- LAYER 3: Thanh Control Bar (Floating Top Center) -->
        <!-- ĐÃ SỬA LỖI: Xóa thuộc tính Effect thừa ở đây -->
        <Border VerticalAlignment="Top" HorizontalAlignment="Center"
                Background="#F21E1E1E" 
                BorderBrush="#33FFFFFF" BorderThickness="1"
                CornerRadius="25"
                Padding="20,10"
                Margin="0,20,0,0">

            <!-- Chỉ giữ lại Effect trong thẻ con này -->
            <Border.Effect>
                <DropShadowEffect ShadowDepth="5" BlurRadius="20" Opacity="0.5"/>
            </Border.Effect>

            <!-- Animation trượt lên/xuống -->
            <Border.RenderTransform>
                <TranslateTransform Y="0"/>
            </Border.RenderTransform>
            <Border.Style>
                <Style TargetType="Border">
                    <Style.Triggers>
                        <!-- Khi IsMenuVisible = False, trượt lên trên (-120px) và mờ đi -->
                        <DataTrigger Binding="{Binding IsMenuVisible}" Value="False">
                            <DataTrigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                                         To="-120" Duration="0:0:0.4">
                                            <DoubleAnimation.EasingFunction>
                                                <BackEase EasingMode="EaseIn" Amplitude="0.3"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.3"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.EnterActions>
                            <DataTrigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                                         To="0" Duration="0:0:0.4">
                                            <DoubleAnimation.EasingFunction>
                                                <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.3"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.ExitActions>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <!-- Drag Handle Icon (Trang trí) -->
                <Path Data="M 0,0 L 2,0 L 2,2 L 0,2 Z M 0,5 L 2,5 L 2,7 L 0,7 Z M 0,10 L 2,10 L 2,12 L 0,12 Z"
                      Fill="#555" Margin="0,0,15,0" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5">
                    <Path.RenderTransform>
                        <ScaleTransform ScaleX="2" ScaleY="2"/>
                    </Path.RenderTransform>
                </Path>

                <!-- 1. Stats Toggle Button -->
                <Button Style="{StaticResource BarButton}" 
                        ToolTip="Thông số (Ping/FPS)" 
                        Command="{Binding ToggleStatsCommand}">
                    <TextBlock Text="&#xE9D2;" FontFamily="Segoe MDL2 Assets" FontSize="20"/>
                </Button>

                <!-- 2. Mic Toggle Button -->
                <Button Style="{StaticResource BarButton}" 
                        ToolTip="Bật/Tắt Mic" 
                        Command="{Binding ToggleMicCommand}" Margin="5,0,0,0">
                    <Grid>
                        <!-- Icon Mic Mở -->
                        <TextBlock Text="&#xE720;" FontFamily="Segoe MDL2 Assets" FontSize="20" Style="{StaticResource MicOnIcon}"/>
                        <!-- Icon Mic Tắt (Màu đỏ) -->
                        <TextBlock Text="&#xE721;" FontFamily="Segoe MDL2 Assets" FontSize="20" Style="{StaticResource MicOffIcon}"/>
                    </Grid>
                </Button>

                <!-- 3. Mouse Mode (Placeholder) -->
                <Button Style="{StaticResource BarButton}" 
                        ToolTip="Chế độ chuột (Game/Desktop)" 
                        Command="{Binding ToggleMouseModeCommand}" Margin="5,0,0,0">
                    <TextBlock Text="&#xE962;" FontFamily="Segoe MDL2 Assets" FontSize="20"/>
                </Button>


                <!-- Divider -->
                <Rectangle Width="1" Height="24" Fill="#444" Margin="15,0"/>

                <!-- 4. Hide Menu Button -->
                <Button Style="{StaticResource BarButton}" 
                        ToolTip="Ẩn Menu (Ctrl+M)" 
                        Command="{Binding ToggleMenuCommand}">
                    <TextBlock Text="&#xE70E;" FontFamily="Segoe MDL2 Assets" FontSize="20"/>
                </Button>

                <!-- 5. Disconnect Button (Danger) -->
                <Button Style="{StaticResource DangerButton}" 
                        ToolTip="Ngắt kết nối" 
                        Command="{Binding ConnectCommand}" Margin="5,0,0,0">
                    <TextBlock Text="&#xE7E8;" FontFamily="Segoe MDL2 Assets" FontSize="20"/>
                </Button>
            </StackPanel>
        </Border>

        <!-- LAYER 4: Hint khi ẩn menu -->
        <Border HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,15,0,0"
                Background="#99000000" CornerRadius="15" Padding="15,5" IsHitTestVisible="False">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Opacity" Value="0"/>
                    <Style.Triggers>
                        <!-- Chỉ hiện khi IsMenuVisible = False -->
                        <DataTrigger Binding="{Binding IsMenuVisible}" Value="False">
                            <Setter Property="Opacity" Value="1"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <TextBlock FontSize="12" Foreground="#CCC">
                Nhấn <Run FontWeight="Bold" Foreground="White">Ctrl + M</Run> để hiện Menu
            </TextBlock>
        </Border>

        <!-- LAYER 5: Toast Notification (Bottom Center) -->
        <Border HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,50"
                Background="#EE222222" BorderBrush="#444" BorderThickness="1"
                CornerRadius="25" Padding="25,12"
                IsHitTestVisible="False">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="2" BlurRadius="10" Opacity="0.5"/>
            </Border.Effect>

            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Opacity" Value="0"/>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <TranslateTransform Y="20"/>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <!-- Animation Hiện/Ẩn Toast -->
                        <DataTrigger Binding="{Binding IsToastVisible}" Value="True">
                            <DataTrigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)" To="0" Duration="0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.EnterActions>
                            <DataTrigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.3"/>
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)" To="20" Duration="0:0:0.3"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.ExitActions>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="{Binding ToastMessage}" Foreground="#F0F0F0" FontSize="14"/>

                <!-- Phím tắt hint trong Toast (nếu có) -->
                <Border Margin="15,0,0,0" Background="#444" CornerRadius="4" Padding="6,2" BorderBrush="#666" BorderThickness="1"
                        Style="{StaticResource KeyHintBorder}">
                    <TextBlock Text="{Binding ToastKeyHint}" FontSize="12" FontFamily="Consolas" Foreground="#CCC" FontWeight="Bold"/>
                </Border>
            </StackPanel>
        </Border>

    </Grid>
</UserControl>