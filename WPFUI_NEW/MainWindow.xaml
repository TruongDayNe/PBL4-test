<Window x:Class="WPFUI_NEW.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFUI_NEW"
        mc:Ignorable="d"
        Title="My Stream App" Height="500" Width="850">
    <Grid>
        <Frame x:Name="MainFrame"
               NavigationUIVisibility="Hidden"
               Navigated="MainFrame_Navigated"/>
        <!-- NavigationUIVisibility="Hidden" để ẩn thanh điều hướng mặc định -->
        <!-- Navigated="MainFrame_Navigated" để gọi hàm cập nhật tiêu đề trong code-behind -->
    </Grid>
</Window>
