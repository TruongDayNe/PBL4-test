<Window x:Class="WPFUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Image x:Name="pnScreen"
           Grid.Row="0"
           Stretch="Uniform" 
           Margin="10"/>

        <StackPanel Grid.Row="1" 
                Orientation="Horizontal" 
                HorizontalAlignment="Center" 
                Margin="10">
            <Button x:Name="startBtn" Content="Demo" 
                Click="StartButton_Click" 
                Padding="20,10"/>
            <Button x:Name="startStreamBtn" Content="Bắt đầu STREAM" Click="StartStreamBtn_Click" Padding="20,10" Margin="5"/>
            <Button x:Name="startReceiveBtn" Content="Bắt đầu NHẬN" Click="StartReceiveBtn_Click" Padding="20,10" Margin="5"/>
        </StackPanel>

    </Grid>
</Window>
